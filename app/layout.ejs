<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title><%- title %></title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Azeret+Mono:wght@400;700&family=Noto+Sans+TC:wght@400;700&display=swap"
    rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" />
  <link rel="stylesheet" href="./assets/style/all.css">
</head>

<body>
  <!--pc mode -->
  <nav class="pc bg-secondary fixed-top">
    <div class="container d-flex justify-content-between align-items-center">
      <a href="#"><img class="logo my-4" src="./assets/images/logo.svg" alt="logo"></a>
      <ul class="navBar list-unstyled text-white d-flex align-items-center m-0">
        <li class="me-5 my-6"><a href="index.html">首頁</a></li>
        <li class="me-5 my-6"><a href="course.html">課程介紹</a></li>
        <li class="me-1 my-6"><a href="#" data-bs-toggle="modal" data-bs-target="#exampleModal"><span
              class="material-icons">account_circle</span>登入</a></li>
      </ul>
    </div>
  </nav>

  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content bg-secondary">
        <div class="modal-header bg-secondary">
          <h5 class="modal-title text-light text-center" id="exampleModalLabel">登入</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

          <form>
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label text-light">信箱</label>
              <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                placeholder="請輸入信箱">
            </div>
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label text-light">密碼</label>
              <input type="password" class="form-control" id="exampleInputPassword1" placeholder="請輸入密碼">
            </div>
            <button type="submit" class="login mb-5 btn btn-grandient">登入</button>
          </form>
          <div class="other mb-3 text-light text-center">其他登入方式</div>
          <div class="fb btn btn-outline-light mb-4"><img src="./assets/images/icon_fb.svg" alt="facebook">Facebook 登入</div>
          <div class="google btn btn-outline-light"><img src="./assets/images/icon_google.svg" alt="google">Google 登入</div>
        </div>
        <div class="modal-footer">
        </div>
      </div>
    </div>
  </div>

  <!--mobile mode-->
  <nav class="mobile bg-secondary d-flex justify-content-between align-items-center">
    <a href="#"><img class="logo" src="./assets/images/logo2.svg" alt="logo"></a>
    <span class="icon material-icons text-primary me-3">
      drag_handle
    </span>
  </nav>

  <ul class="navBar bg-secondary d-flex list-unstyled text-white">
    <li class="mt-2 mb-2"><a href="index.html">首頁</a></li>
    <li class="mb-2"><a href="course.html">課程介紹</a></li>
    <li class="mb-2"><a href="#"><span class="material-icons">account_circle</span>登入</a></li>
  </ul>




  <%- contents %>

  <footer class="footer bg-secondary text-center py-4">
    Coding Home © 2022 All Rights Reserved
  </footer>

  <script src="./assets/js/vendors.js"></script>
  <script src="./assets/js/all.js"></script>
</body>

</html>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"
  integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script>
  $(".navBar").slideUp();
  $(".icon").on("click", function () {
    $(".navBar").slideToggle();
  })
</script>